{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "removeComments": false,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "outDir": "lib",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "strictNullChecks": true,
        "sourceMap": true,
        "baseUrl": ".",
        "rootDir": ".",
        "jsx": "react-jsx",
        "allowJs": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "@/assets/*": [
                "./src/assets/*"
            ],
            "@/pages/*": [
                "./src/pages/*"
            ],
            "@/types/*": [
                "./src/types/*"
            ],
        }
    },
    "include": [
        "./src",
        "./src/types"
    ],
    "compileOnSave": false
}
